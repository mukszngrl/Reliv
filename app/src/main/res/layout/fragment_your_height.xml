                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:id="@+id/view_1_4m"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="end"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_1_3m"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/ll_1_2m"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_1_4m">

                    <TextView
                        android:id="@+id/tv_1_3m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/helvetica"
                        android:text="@string/_1_3_m"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:id="@+id/view_1_3m"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="end"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_1_2m"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/ll_1_1m"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_1_3m">

                    <TextView
                        android:id="@+id/tv_1_2m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/helvetica"
                        android:text="@string/_1_2_m"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:id="@+id/view_1_2m"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="end"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_1_1m"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@+id/ll_1_0m"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_1_2m">

                    <TextView
                        android:id="@+id/tv_1_1m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/helvetica"
                        android:text="@string/_1_1_m"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <View
                        android:id="@+id/view_1_1m"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_gravity="end"
                        android:background="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_1_0m"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:gravity="center_vertical|end"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ll_1_1m">

                    <TextView
                        android:id="@+id/tv_1_0m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/helvetica"
                        android:text="@string/_1_0_m"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="@dimen/_2sdp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_27sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/white" />

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        style="@style/Widget.Gray.ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:padding="@dimen/_10sdp"
        android:text="@string/next"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_main"
        app:shapeAppearance="@style/RoundedCornerButton5dp" />

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_next">

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/light_blue" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/light_blue" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/gray_very_light_color" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/gray_very_light_color" />

        <View
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_3sdp"
            android:background="@color/gray_very_light_color" />

    </LinearLayout>
