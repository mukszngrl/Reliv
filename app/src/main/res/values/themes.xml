<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reliv" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_dark_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_dark_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.Reliv.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="LoaderTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@color/black_opaque</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="GrayRounded" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/gray_dark_color</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorPrimary">@color/gray_light_color</item>
    </style>

    <style name="Widget.Gray.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GrayButtonThemeOverlay</item>
    </style>

    <style name="GrayButtonThemeOverlay">
        <item name="android:textColor">@color/gray_dark_color</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorPrimary">@color/very_gray_light_color</item>
    </style>

    <style name="Widget.Blue.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/BlueButtonThemeOverlay</item>
    </style>

    <style name="BlueButtonThemeOverlay">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorPrimary">@color/light_blue</item>
    </style>

    <style name="CircularLeftRightOfButton">
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_15sdp</item>
    </style>

    <style name="RoundedCornerButton5dp">
        <item name="cornerSizeTopLeft">@dimen/_5sdp</item>
        <item name="cornerSizeTopRight">@dimen/_5sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_5sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_5sdp</item>
    </style>

</resources>